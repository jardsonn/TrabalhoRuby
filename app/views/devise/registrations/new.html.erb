<section class="min-h-screen flex items-center justify-center">
  <div class="bg-white flex rounded-2xl shadow-lg max-w-3xl p-5 items-center border">
    <div class="md:w-auto w-96 px-16 md:px-44">
      <h2 class="font-black text-2xl">Criar conta</h2>
      <p class="text-xs mt-2 text-gray-500 font-semibold">Preencha todos os campos abaixo</p>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <% if flash[:empty_name] %>
          <div class="mx-6 my-4 flex justify-center rounded border-2 border-red-200 bg-red-100 p-1">
            <span class="text-sm font-semibold text-red-600"><%= flash[:empty_name] %></span>
          </div>
        <% end %>

        <%#= render "devise/shared/error_messages", resource: resource %>

        <div class="flex flex-col mt-6 w-auto md:w-96">   <%= f.label :name, "Nome completo", class: "block text-sm font-medium text-gray-800 mb-2" %>
          <div class="relative mb-4">
            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
              <i class="fa-solid fa-user text-gray-500 dark:text-gray-400"></i>
            </div>
            <%= f.text_field :name, autofocus: true, placeholder: "Ada Lovelace", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pl-10 p-2.5 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
          </div>

          <%= f.label :email, "E-mail", class: "block text-sm font-medium text-gray-800 mb-2" %>
          <div class="relative mb-4">
            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
              <i class="fa-solid fa-envelope text-gray-500 dark:text-gray-400"></i>
            </div>
            <%= f.email_field :email, autofocus: true, placeholder: "adalovelace@email.com", autocomplete: "email", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pl-10 p-2.5 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
          </div>

          <%= f.label :password, "Senha", class: "block text-sm font-medium text-gray-800 mb-2" %>
          <div class="relative w-auto md:w-96">
            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
              <i class="fa-solid fa-lock text-gray-500 dark:text-gray-400"></i>
            </div>
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "••••••••", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pl-10 p-2.5 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
          </div>
          <div class="flex justify-between mt-2 mb-6">
            <div class="flex items-start">
              <div class="flex items-center h-5">
                <input type="checkbox" name="show-password" id="show-password" class="w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-blue-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-blue-600 dark:ring-offset-gray-800">
              </div>
              <label for="show-password" class="ml-2 text-sm font-medium text-gray-900 dark:text-gray-300">Mostrar
                senha</label>
            </div>
            <% if @minimum_password_length %>
              <span class="text-xs text-gray-400">No mínimo <%= @minimum_password_length %> caracteres</span>
            <% end %>
          </div>
          <%= f.label :password_confirmation, "Repita sua senha", class: "block text-sm font-medium text-gray-800 mb-2" %>
          <div class="relative mb-4 w-auto md:w-96">
            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
              <i class="fa-solid fa-lock text-gray-500 dark:text-gray-400"></i>
            </div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "••••••••", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pl-10 p-2.5 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
          </div>
          <%= f.submit "Criar conta", class: "bg-blue-500 hover:bg-blue-700 rounded-lg font-black text-white py-2 hover:scale-105 duration-300" %>
        </div>
      <% end %>
      <div class="flex justify-start pt-6">
        <p class="block text-sm font-medium text-gray-800">Já está cadastrado?</p>
        <%= link_to "Entrar", new_session_path(resource_name), class: "ml-4 block text-sm font-medium text-blue-500 hover:text-blue-700" %>
        <br/>
      </div>
    </div>
  </div>
</section>



